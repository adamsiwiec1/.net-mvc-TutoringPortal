@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Firstname"></label>
                <input asp-for="Input.Firstname" class="form-control" />
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Lastname"></label>
                <input asp-for="Input.Lastname" class="form-control" />
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.UserRole"></label>
                <select asp-for="Input.UserRole" class="form-control" id="userRole">
                    <option value="Administrator">Administrator</option>
                    <option value="Tutor">Tutor</option>
                    <option value="Student">Student</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Input.MajorName"></label>
                <select asp-for="Input.MajorName" class="form-control">
                    <option value="Accounting">Accounting</option>
                    <option value="Economics">Economics</option>
                    <option value="Entrepreneurship and Innovation">Entrepreneurship and Innovation</option>
                    <option value="Finance">Finance</option>
                    <option value="General Business">General Business</option>
                    <option value="Global Supply Chain Management">Global Supply Chain Management</option>
                    <option value="Hospitality and Tourism Management">Hospitality and Tourism Management</option>
                    <option value="Management">Management</option>
                    <option value="Management Information Systems">Management Information Systems</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Organizational Leadership">Organizational Leadership</option>
                </select>

            </div>

            <div class="form-group" id="studentBiographyGroup">
                <label asp-for="Input.StudentBiography"></label>
                <input asp-for="Input.StudentBiography" class="form-control" />
                <span asp-validation-for="Input.StudentBiography" class="text-danger"></span>
            </div>

            <div class="form-group" id="studentGraduationDateGroup">
                <label>Expected Student Graduation Date</label>
                <select asp-for="Input.StudentGraduationDate" class="form-control">
                    <option value="May 2021">May 2021</option>
                    <option value="December 2021">December 2021</option>
                    <option value="May 2022">May 2022</option>
                    <option value="December 2022">December 2022</option>
                    <option value="May 2023">May 2023</option>
                    <option value="December 2023">December 2023</option>
                    <option value="May 2024">May 2024</option>
                    <option value="December 2024">December 2024</option>
                </select>
            </div>

            <div class="form-group" id="tutorBiographyGroup">
                <label asp-for="Input.TutorBiography"></label>
                <input asp-for="Input.TutorBiography" class="form-control" />
                <span asp-validation-for="Input.TutorBiography" class="text-danger"></span>
            </div>


            <div class="form-group" id="tutorGraduationDateGroup">
                <label>Expected Tutor Graduation Date</label>
                <select asp-for="Input.TutorGraduationDate" class="form-control">
                    <option value="May 2021">May 2021</option>
                    <option value="December 2021">December 2021</option>
                    <option value="May 2022">May 2022</option>
                    <option value="December 2022">December 2022</option>
                    <option value="May 2023">May 2023</option>
                    <option value="December 2023">December 2023</option>
                    <option value="May 2024">May 2024</option>
                    <option value="December 2024">December 2024</option>
                </select>
            </div>

            <div class="form-group" id="tutorRatingGroup">
                <label>Tutor Rating</label>
                <input asp-for="Input.TutorRating" value="0" class="form-control" />
            </div> @*Plan on leaving this hidden, if possible, and having it default to 0. Doesn't make sense to let brand new tutors A. already have a rating and B. get to set that value themselves*@

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
