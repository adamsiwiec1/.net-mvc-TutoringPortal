@model Fall2020AppGroup12.Models.MajorModel.Major

@{

    ViewData["Title"] = "Add Major";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddMajor" asp-controller="Major">

    <h2>@ViewData["Title"]</h2>

    <div class="form-group">
        <label>Major Name</label>
        <input asp-for="MajorName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Major Description</label>
        <input asp-for="MajorAckronym" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentID" asp-items="ViewBag.AllDepartments"class="form-control">

        </select>
    </div>


    <button type="submit" class="btn btn-primary">Add Department</button>
</form>
