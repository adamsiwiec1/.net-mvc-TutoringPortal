@model Major
@{
    ViewData["Title"] = "ConfirmDeleteMajor";
}

<h4>Confirm Delete Major</h4>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditMajor" asp-controller="Major" method="post">
    @Html.HiddenFor(m => m.MajorID)

    <div class="form-group">
        <label>Major Name</label>
        <input asp-for="MajorName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Major Acronym</label>
        <input asp-for="MajorAckronym" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Department</label>
        <input asp-for="Department" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Delete Major</button>

</form>
