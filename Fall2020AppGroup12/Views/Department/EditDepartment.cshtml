@model Department

@{

    ViewData["Title"] = "Edit Department";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddDepartment" asp-controller="Department">

    <h2>@ViewData["Title"]</h2>

    @Html.HiddenFor(m => m.DepartmentID)

    <div class="form-group">
        <label>Department Name</label>
        <input asp-for="DepartmentName" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Department Description</label>
        <input asp-for="DepartmentDescription" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Edit Department</button>
</form>