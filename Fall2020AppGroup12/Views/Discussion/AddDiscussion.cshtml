@model Discussion

@{
    ViewData["Title"] = "Add Discussion";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>



<form asp-action="AddDiscussion" asp-controller="Discussion" method="post">

    <div class="form-group">
        <label>Discussion Title</label>
        <input asp-for="DiscussionTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Discussion Description</label>
        <input asp-for="DiscussionDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date of Post</label>
        <input asp-for="DiscussionDateCreated" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose Course</label>
        <select asp-for="CourseID" asp-items="ViewBag.AllCourses" class="form-control">
            <option value="">None</option>
        </select>
    </div>

    <div class="form-group">
        <label>Choose a Student</label>
        <select asp-for="ApplicationUserID" asp-items="ViewBag.AllStudents" class="form-control">
            <option value="">None</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Post Discussion</button>
</form>

