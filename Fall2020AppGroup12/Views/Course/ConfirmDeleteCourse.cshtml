@model Course
@{
    ViewData["Title"] = "Are you sure you want to delete this course?";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="DeleteCourse" asp-controller="Course">

    <h2>@ViewData["Title"]</h2>

    @Html.HiddenFor(m => m.CourseID)

    <div class="form-group">
        <label>Course Code</label>
        <input asp-for="CourseCode" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Course Description</label>
        <input asp-for="CourseDescription" class="form-control" readonly />
    </div>

    <br />
    Click 'Delete Course' if you are sure.
    <button type="submit" class="btn btn-primary">Delete Course</button>
</form>