@model Response
@{
    ViewData["Title"] = "Are you sure you want to delete this response?";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="DeleteResponse" asp-controller="Response">

    <h2>@ViewData["Title"]</h2>

    @Html.HiddenFor(m => m.ResponseID)

    <div class="form-group">
        <label>Response Title</label>
        <input asp-for="Title" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label>Response Body</label>
        <input asp-for="Body" class="form-control" readonly/>
    </div>
    Click 'Delete Response' if you are sure.
    <button type="submit" class="btn btn-primary">Delete Response</button>
</form>