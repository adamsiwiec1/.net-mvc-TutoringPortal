@model Response
@{
    ViewData["Title"] = "Add Response";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddResponse" asp-controller="Response" method="post">

    <div class="form-group">
        <label>Response Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Response Body</label>
        <input asp-for="Body" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose a Student</label>
        <select asp-for="DiscussionID" asp-items="ViewBag.AllDiscussions" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Response</button>



</form>