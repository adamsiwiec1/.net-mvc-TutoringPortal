@model Response
@{
    ViewData["Title"] = "Edit Response";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditResponse" asp-controller="Response" method="post">

    @Html.HiddenFor(m => m.ResponseID)

    <div class="form-group">
        <label>Enter a Response Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Enter a Response Body:</label>
        <input asp-for="Body" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose a Discussion</label>
        <select asp-for="DiscussionID" asp-items="ViewBag.AllDiscussions" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Edit Response</button>

</form>