@model Comment
@{
    ViewData["Title"] = "Are you sure you want to delete this comment?";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="DeleteComment" asp-controller="Comment" method="post">

    @Html.HiddenFor(m => m.CommentID)

    <div class="form-group">
        <label>Comment Body</label>
        <input asp-for="Body" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Response ID</label>
        <input asp-for="ResponseID" class="form-control" readonly />
    </div>

    @if (Model.Response != null)
    {
    <div class="form-group">
        <label>Response Title</label>
        <input asp-for="Response.Title" class="form-control" readonly />
    </div>
    }


    Click 'Delete Comment' if you are sure.
    <button type="submit" class="btn btn-primary">Delete Comment</button>

</form>
