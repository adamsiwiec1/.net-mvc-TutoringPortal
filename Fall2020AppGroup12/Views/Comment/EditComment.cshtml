@model Comment
@{
    ViewData["Title"] = "Edit Comment";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditComment" asp-controller="Comment" method="post">

    @Html.HiddenFor(m => m.CommentID)

    <div class="form-group">
        <label>Comment Body</label>
        <input asp-for="Body" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose a Response</label>
        <select asp-for="ResponseID" asp-items="ViewBag.AllResponses" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Edit Comment</button>



</form>