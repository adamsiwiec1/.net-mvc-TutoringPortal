@model Comment
@{
    ViewData["Title"] = "Add Comment";
}

<h4>@ViewData["Title"]</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddComment" asp-controller="Comment" method="post">

    <div class="form-group">
        <label>Comment Body</label>
        <input asp-for="Body" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose a Response</label>
        <select asp-for="ResponseID" asp-items="ViewBag.AllResponses" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Comment</button>



</form>